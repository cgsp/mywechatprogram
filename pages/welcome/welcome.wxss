page {
  background-color: #40ae3b;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 160rpx auto 0;
}

.name {
  margin-top: 160rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 2rpx;
}

.moto-container {
  margin-top: 160rpx;
  border: 1px solid #fff;
  width: 300rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 5px;
}

.moto {
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
}
